{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "$*": ["src/*.js", "src/*/index.js"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "Node16",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "esm": true
  }
}
